{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "remoteVnetSubscription": {
            "type": "string",
            "defaultValue": "[subscription().id]"
        },
        "remoteVnetResourceGroupName": {
            "type": "string",
            "defaultValue": "[resourceGroup().name]"
        },
        "remoteVnetName": {
            "type": "string"
        },
        "localVnetName": {
            "type": "string"
        },
        "peeringFromHub": {
            "type": "string",
            "defaultValue": "yes"
        }
    },
    "variables": {
        "networkId": "[concat('/subscriptions/', parameters('remoteVnetSubscription'), '/resourceGroups/', parameters('remoteVnetResourceGroupName'), '/providers/Microsoft.Network/virtualNetworks/', parameters('remoteVnetName'))]",
        "peeringName": "[concat(parameters('localVnetName'), '/', parameters('localVnetName'), 'to', parameters('remoteVnetName'))]"
    },
    "resources": [
        {
            "apiVersion": "2016-06-01",
            "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
            "name": "[variables('peeringName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [],
            "properties": {
                "allowVirtualNetworkAccess": true,
                "allowForwardedTraffic": false,
                "allowGatewayTransit": "[if(equals(parameters('peeringFromHub'), 'yes'), bool(1), bool(0))]",
                "useRemoteGateways": "[if(equals(parameters('peeringFromHub'), 'yes'), bool(0), bool(1))]",
                "remoteVirtualNetwork": {
                    "id": "[variables('networkId')]"
                }
            }
        }
    ]
}