{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "remoteVnetSubscriptionId": {
            "type": "string",
            "defaultValue": "subscription().subscriptionId"
        },
        "remoteVnetResourceGroupName": {
            "type": "string",
            "defaultValue": "resourceGroup().name"
        },
        "remoteVnetName": {
            "type": "string"
        },
        "localVnetName": {
            "type": "string"
        }
    },
    "variables": {
        "networkId": "[concat('/subscriptions/', parameters('remoteVnetSubscriptionId'), '/resourceGroups/', parameters('remoteVnetResourceGroupName'), '/providers/Microsoft.Network/virtualNetworks/', parameters('remoteVnetName'))]",
        "peeringName": "[concat(parameters('localVnetName'), '/', parameters('localVnetName'), 'to', parameters('remoteVnetName'))]"
    },
"resources": [
        {
        "apiVersion": "2016-06-01",
        "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
        "name": "[variables('peeringName')]",
        "location": "[resourceGroup().location]",
        "dependsOn": [
           
        ],
        "properties": {
        "allowVirtualNetworkAccess": true,
        "allowForwardedTraffic": false,
        "allowGatewayTransit": false,
        "useRemoteGateways": false,
            "remoteVirtualNetwork": {
                "id": "[variables('networkId')]"
            }
        }
        }
    ]
}