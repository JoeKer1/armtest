{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "subnets": {
            "type": "array",
            "defaultValue": [
                {
                    "name": "default",
                    "ipRange": "10.0.0.0/24",
                    "nsgrules": []
                }
            ]
        },
        "addressPrefixes": {
            "type": "array",
            "defaultValue": [
                "10.0.0.0/16"
            ]
        },
        "vnetName": {
            "type": "string"
        },
        "resource-prefix": {
            "type": "string",
            "defaultValue": ""
        }
    },
    "variables": {
        "nsg-template": "https://raw.githubusercontent.com/JoeKer1/armtest/master/linked-templates/subnet-nsg.json",
        "enableDdosProtection": false,
        "copy": [
            {
                "name": "subnets",
                "count": "[length(parameters('subnets'))]",
                "input": "[NCR.getSubnet(parameters('subnets')[copyIndex('subnets)], parameters('resource-prefix'))]"
            },
            {
                "name": "subnets-nsgs",
                "count": "[length(parameters('subnets'))]",
                "input": {
                    "name": "[concat(parameters('resource-prefix'), '-', parameters('subnets')[copyIndex('subnets-nsgs')].name, '-NSG')]",
                    "nsgrules": "[parameters('subnets')[copyIndex('subnets-nsgs')].nsgrules]"
                }
            }
        ]
    },
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "name": "[concat('subnet-nsg', copyIndex(1))]",
            "type": "Microsoft.Resources/deployments",
            "dependsOn": [
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('nsg-template')]"
                },
                "parameters": {
                    "rules": {
                        "value": "[variables('subnets-nsgs')[copyIndex()].nsgrules]"
                    },
                    "subnetName": {
                        "value": "[variables('subnets')[copyIndex()].name]"
                    },
                    "nsg-name": {
                        "value": "[variables('subnets-nsgs')[copyIndex()].name]"
                    }
                }
            },
            "copy": {
                "name": "nsg-copy",
                "count": "[length(variables('subnets-nsgs'))]"
            }
        },
        {
            
            "apiVersion": "2018-08-01",
            "name": "[parameters('vnetName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('subnet-nsg', length(variables('subnets-nsgs')))]"
            ],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": "[parameters('addressPrefixes')]"
                },
                "subnets": "[variables('subnets')]",
                "enableDdosProtection": "[variables('enableDdosProtection')]"
            }
        }
    ],
    "functions": [
        {
            "namespace": "NCR",
            "members": {
                "getSubnet": {
                    "parameters": [
                        {
                            "name": "subnet",
                            "type": "object"
                        },
                        {
                            "name": "resource-prefix",
                            "type": "string"
                        }
                    ],
                    "output": {
                        "type": "object",
                        "value": "[if(equals(parameters('subnet').name, 'GatewaySubnet'),  NCR.getGatewaySubnet(parameters('subnet'), parameters('resource-prefix')), NCR.getNormalSubnet(parameters('subnet'), parameters('resource-prefix')))]"
                    }
                },
                "getNormalSubnet": {
                    "parameters": [
                        {
                            "name": "subnet",
                            "type": "object"
                        },
                        {
                            "name": "resource-prefix",
                            "type": "string"
                        }
                    ],
                    "output": {
                        "type": "object",
                        "value": {
                            "name": "[concat(parameters('resource-prefix'), '-', parameters('subnets').name, '-', 'SNET')]",
                            "properties": {
                                "addressPrefix": "[parameters('subnets').ipRange]",
                                "networkSecurityGroup": {
                                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(parameters('resource-prefix'), '-', parameters('subnets').name, '-NSG'))]"
                                }
                            }
                        }
                    }
                },
                "getGatewaySubnet": {
                    "parameters": [
                        {
                            "name": "subnet",
                            "type": "object"
                        },
                        {
                            "name": "resource-prefix",
                            "type": "string"
                        }
                    ],
                    "output": {
                        "type": "object",
                        "value": {
                            "name": "GatewaySubnet",
                            "properties": {
                                "addressPrefix": "[parameters('subnets').ipRange]"
                            }
                        }
                    }
                }
            }
        }
    ]
}