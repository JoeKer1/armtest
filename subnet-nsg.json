{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "rules": {
            "type": "array"
        },
        "vnetResourceGroupName": {
            "type": "string",
            "defaultValue": "[resourceGroup().name]"
        },
        "vnetName": {
            "type": "string"
        },
        "subnetName": {
            "type": "string"
        },
        "nsg-name": {
            "type": "string"
        }
    },
    "variables": {
        "nsg-name": "[parameters('nsg-name')]",
        "rules": "[parameters('rules')]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[variables('nsg-name')]",
            "condition": "[if(equals(parameters('subnetName'), 'GatewaySubnet'), bool(0), bool(1))]",
            "location": "[resourceGroup().location]",
            "apiVersion": "2018-11-01",
            "properties": {
                "securityRules": "[variables('rules')]"
            }
        },
        {
            "apiVersion": "2018-11-01",
            "name": "[concat(variables('nsg-name'), '-deploy')]",
            "condition": "[if(equals(parameters('subnetName'), 'GatewaySubnet'), bool(0), bool(1))]",
            "type": "Microsoft.Resources/deployments",
            "resourceGroup": "[parameters('vnetResourceGroupName')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkSecurityGroups/', variables('nsg-name'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/JoeKer1/armtest/master/change-subnet-nsg.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualNetworkName": {
                        "value": "[parameters('vnetName')]"
                    },
                    "subnetName": {
                        "value": "[parameters('subnetName')]"
                    },
                    "subnetAddressPrefix": {
                        "value": "[reference(resourceId(parameters('vnetResourceGroupName'), 'Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnetName')), '2018-03-01').addressPrefix]"
                    },
                    "nsgId": {
                        "value": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsg-name'))]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}